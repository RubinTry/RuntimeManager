<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <EditText
        android:id="@+id/edt_runtime_principal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@null"
        android:textSize="14sp"
        android:textColor="@color/c_666666"
        android:hint="请输入接口负责人"
        android:gravity="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_f2f2f2" />

    <EditText
        android:id="@+id/edt_host_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="20dp"
        android:background="@null"
        android:hint="请输入主机地址或域名（如：https://192.168.1.1:8088/）"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/c_666666"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/c_f2f2f2" />

    <TextView
        android:id="@+id/tv_confirm_runtime"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/btn_confirm_custom"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:text="确定"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginBottom="20dp"/>
</LinearLayout>